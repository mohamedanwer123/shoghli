<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.cm.mywork.Fragments.Products"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        app:cardElevation="50dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/et"
                android:textColor="#fff"
                android:textSize="16dp"
                android:hint="Search..."
                android:paddingLeft="20dp"
                android:textColorHint="#8f8c8e"
                android:paddingTop="5dp"
                android:id="@+id/productFragment_search"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:id="@+id/productFragment_lv"
        android:scrollbars="none"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="2dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-80dp"
        app:backgroundTint="#666262"
        android:id="@+id/productFragment_add"
        />


</LinearLayout>
